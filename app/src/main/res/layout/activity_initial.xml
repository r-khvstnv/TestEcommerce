<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".InitialActivity">

    <View
        android:layout_width="@dimen/splash_shape_size"
        android:layout_height="@dimen/splash_shape_size"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/splash_shape_margin_end"
        android:background="@drawable/shape_circle"
        android:backgroundTint="?attr/colorSecondary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/splash_label_margin_start"
        android:maxEms="5"
        android:maxLines="2"
        android:text="@string/label_concept"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/splash_label_text_size"
        app:fontFamily="@font/mark_pro_heavy" />
</FrameLayout>