<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TitleTextStyle">
        <item name="fontFamily">@font/mark_pro_bold</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="HintExpandableStyle">
        <item name="fontFamily">@font/mark_pro_regular</item>
        <item name="android:fontFamily">@font/mark_pro_regular</item>
        <item name="android:textSize">@dimen/hint_expandable_text_size</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="FilterTitleTextStyle">
        <item name="fontFamily">@font/mark_pro_medium</item>
        <item name="android:textSize">@dimen/filter_title_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">@dimen/filter_title_margin_vertical</item>
    </style>

    <style name="FilterSpinnerStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/filter_title_text_size</item>
        <item name="fontFamily">@font/mark_pro_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/filter_title_text_margin_vertical</item>
    </style>
</resources>